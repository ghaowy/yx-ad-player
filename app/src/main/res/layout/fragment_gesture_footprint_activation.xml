<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_gesture"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.activation.GestureActiveTwoStepFragment">

    <FrameLayout
        android:id="@+id/fl_fragment_gesture"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_bottom_floor"
        android:layout_width="match_parent"
        android:layout_height="890dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/bottom_grid_2" />

    <TextView
        android:id="@+id/tv_guide_tip_1"
        android:layout_width="550dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="265dp"
        android:layout_marginBottom="593dp"
        android:background="@drawable/elephant_talk_bg"
        android:gravity="center"
        android:text="@string/guide_tips_1"
        android:textSize="@dimen/guide_tip_textsize"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_footprint"
        android:layout_width="520dp"
        android:layout_height="315dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="280dp"
        android:layout_marginBottom="131dp"
        android:src="@drawable/footprint_rock"/>


</RelativeLayout>